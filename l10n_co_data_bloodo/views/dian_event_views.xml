<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="dian_event_view_tree" model="ir.ui.view">
            <field name="name">dian.event.tree</field>
            <field name="model">dian.event</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="dian_code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="dian_event_view_form" model="ir.ui.view">
            <field name="name">dian.event.form</field>
            <field name="model">dian.event</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="dian_code"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_dian_event" model="ir.actions.act_window">
            <field name="name">Events</field>
            <field name="res_model">dian.event</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
